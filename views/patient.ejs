<!DOCTYPE html>
<html lang="en">
  <% include partial/head %>
  <body>

    <% include partial/menu %>

    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h3>Data Patient</h3>
        </div>
        <div class="col-md-6">
          <form action="/patient" class="navbar-form navbar-right" style="margin-bottom:20px" method="post">
            <div class="form-group">
              <input type="text" name="search" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <table class="table table-striped table-hover">
            <thead>
              <th>No</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Full Name</th>
              <th>Action</th>
            </thead>
            <% var i = 1
              data.forEach(function(r){ %>
            <tbody>
              <td><%= i %></td>
              <td><%= r.first_name.charAt(0).toUpperCase() + r.first_name.slice(1) %></td>
              <td><%= r.last_name.charAt(0).toUpperCase() + r.last_name.slice(1) %></td>
              <td><%= r.first_name.charAt(0).toUpperCase() + r.first_name.slice(1) %> <%= r.last_name.charAt(0).toUpperCase() + r.last_name.slice(1) %></td>
              <td>
                <a href="/patient/edit/<%= r.id %>">Edit</a>
                <a href="/patient/delete/<%= r.id %>">Delete</a>
              </td>
            </tbody>
            <% i++ }) %>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 text-left">
          <nav aria-label="Page navigation">
            <ul class="pagination">
              <li>
                <a href="#" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
              <li>
                <% data.forEach(function(r){ %>
                  <% for(var i = 0; i < r.length; i++){ %>
                    <a href="/patient/:num">1</a>
                  <% } %>
                <% }) %>
              </li>
              <li>
                <a href="#" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <a href="/patient/add" class="btn btn-success">Add Patient</a>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <a href="/" style="margin-top:20px; display:inline-block"> << back to home </a>
        </div>
      </div>
    </div>

    <% include partial/footer %>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <% include partial/head %>
  <body>

    <% include partial/menu %>

    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <form action="/patient/edit/<%= data[0].id %>" method="post">
            <div class="form-group">
              <label for="exampleInputEmail1">First Name</label>
              <input type="text" name="fn" value="<%= data[0].first_name %>" class="form-control" id="exampleInputEmail1" placeholder="Email">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Last Name</label>
              <input type="text" name="ln" value="<%= data[0].last_name %>" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
          </form>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <a href="/patient" style="margin-top:20px; display:inline-block"> << back to patient </a>
        </div>
      </div>
    </div>

    <% include partial/footer %>
  </body>
</html>
